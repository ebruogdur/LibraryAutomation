@model LibraryAutomation.Models.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel panel-heading">Login Ekranı</div>
    <div class="panel panel-body">
       
        @using (Html.BeginForm())
        {
            <div class="field-validation-error text-danger">@Html.ValidationMessage("hata")</div>
          
            <div class="form-group">
                <div style="width:20%">
                    <p>Email</p>
                   
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" , placeholder = "Email" } )
                    <span class="field-validation-error text-danger"
                          data-valmsg-for="IdentityNumber"
                          data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Email)</span>
                  
                </div>
            </div>

          
            <div class="form-group">
                <div style="width:20%">
                    <p>Şifre</p>
                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", placeholder = "Password" })
                    <span class="field-validation-error text-danger"
                          data-valmsg-for="IdentityNumber"
                          data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Password)</span>
                   
                </div>
            </div>

            <input type="submit" class="btn btn-success" value="giriş">

            
        }

       

        </div>

    </div>

