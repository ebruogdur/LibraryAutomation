@model LibraryAutomation.Models.BookVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel panel-heading">Kitap güncelleme Ekranı</div>
    <div class="panel panel-body">


       @using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
       {
           <div class="form-group">
               <p>Adı </p>
               @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
               <span class="field-validation-error text-danger"
                     data-valmsg-for="Name"
                     data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Name)</span>
           </div>
           
           <div class="form-group">
               <p>sayfası </p>
               @Html.TextBoxFor(a => a.Page, new { @class = "form-control" })
               <span class="field-validation-error text-danger"
                     data-valmsg-for="Page"
                     data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Page)</span>

           </div>
          
           <div class="form-group">
               <p>ISBN</p>
               @Html.TextBoxFor(a => a.ISBN, new { @class = "form-control" })
               <span class="field-validation-error text-danger"
                     data-valmsg-for="Count"
                     data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.ISBN)</span>
           </div>

            


           <div class="form-group">
               <p>yazarı </p>
               @Html.TextBoxFor(a => a.Author, new { @class = "form-control" })
               <span class="field-validation-error text-danger"
                     data-valmsg-for="Author"
                     data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Author)</span>

           </div>
        <div class="form-group">
            <p>sayısı</p>
            @Html.TextBoxFor(a => a.Count, new { @class = "form-control" })
            <span class="field-validation-error text-danger"
                  data-valmsg-for="Count"
                  data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Count)</span>

            </div>


           

                <div class="form-group">

                    <p>Resim güncelle</p>

                    <input type="file" name="file" id="file" style="width: 100%;" />

                </div>

            <input type="submit" value="guncelle">

        }

    </div>
</div>

