@model LibraryAutomation.Models.UserVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel panel-heading">Öğrenci Güncelleme Ekranı</div>
    <div class="panel panel-body">


        @using (Html.BeginForm())
        {
            <div class="form-group">
                <p>kullanıcı tc </p>
                @Html.TextBoxFor(a => a.IdentityNumber, new { @class = "form-control" })
                <span class="field-validation-error text-danger"
                      data-valmsg-for="IdentityNumber"
                      data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.IdentityNumber)</span>
            </div>
           
            <div class="form-group">
                <p>kullanıcı ad </p>
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                <span class="field-validation-error text-danger"
                      data-valmsg-for="IdentityNumber"
                      data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.FirstName)</span>
            </div>
           
            <div class="form-group">
                <p>kullanıcı soyad </p>
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                <span class="field-validation-error text-danger"
                      data-valmsg-for="IdentityNumber"
                      data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.LastName)</span>
            </div>
           
            <div class="form-group">
                <p>kullanıcı telefon </p>
                @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
                <span class="field-validation-error text-danger"
                      data-valmsg-for="IdentityNumber"
                      data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.PhoneNumber)</span>
            </div>
           
            <div class="form-group">
                <p>kullanıcı email </p>
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                <span class="field-validation-error text-danger"
                      data-valmsg-for="IdentityNumber"
                      data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Email)</span>
            </div>
  

            <div class="form-group">
                <div style="width:20%">
                    <p>işe giriş tarihi</p>
                   
                    @Html.TextBoxFor(a => a.WorkStartDate, new { @class = "form-control datepicker", @id = "WDate" })
                    <span class="field-validation-error text-danger"
                          data-valmsg-for="IdentityNumber"
                          data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.WorkStartDate)</span>
                   
                    </div>
                </div>

                @*<div class="form-group">
                    <p>kullanıcı pozisyon </p>
                    @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
                    <span class="field-validation-error text-danger"
                          data-valmsg-for="IdentityNumber"
                          data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Title)</span>
                </div>*@
            


            <div class="form-group">
                <div style="width:20%">
                    <p>Doğum Tarihi</p>
                
                    @Html.TextBoxFor(a => a.Birthdate, new { @class = "form-control datepicker ", @id = "Date" })
                    <span class="field-validation-error text-danger"
                          data-valmsg-for="IdentityNumber"
                          data-valmsg-replace="true">@Html.ValidationMessageFor(model => model.Birthdate)</span>
                    
                    </div>
                </div>


            <input type="submit" value="guncelle">

        }

    </div>
</div>